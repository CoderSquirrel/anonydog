{

    "manifest_version": 2,
    "name": "Anonydog",
    "version": "0.1.1",

    "description": "Enables anonymous pull requests on Github",

    "icons": {
        "128": "icons/anonydog-128.png",
        "16": "icons/anonydog-16.png",
        "64": "icons/anonydog-64.png"
    },

    "permissions": [
        "*://*.anonydog.org/",
        "storage"
    ],

    "content_scripts": [{
        "matches": [
            "*://github.com/*/compare",
            "*://github.com/*/compare/*"
        ],
        "js": [
            "browser-polyfill.min.js",
            "anonydog.js"
        ]
    }],

    "browser_action": {
        "default_icon": "icons/anonydog-32.png"
    },

    "options_ui": {
        "page": "options.html",
        "browser_style": true,
        "chrome_style": true
    }
}
